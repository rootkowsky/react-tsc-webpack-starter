{
	"compilerOptions": {
		"rootDir": "..",
		"outDir": "../dist/",
		"sourceMap": true,
		"noImplicitAny": false,
		"module": "ES6",
		"target": "ES6",
		"jsx": "preserve",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"keyofStringsOnly": true
	},
	"awesomeTypescriptLoaderOptions": {
		"useBabel": false,
		"useCache": false,
		"emitRequireType": false
	},
	"include": [
		"../app/src"
	],
	"exclude": [
		"../node_modules"
	]
}